<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="fr.esilv.youtube.app.VideoActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OKOKOK"
            android:textSize="12sp"
            android:textStyle="bold"
            android:id="@+id/dtitre"
            android:layout_alignParentTop="true" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="10sp"
            android:id="@+id/ddescription"
            android:layout_below="@+id/dtitre"
            android:layout_marginTop="5dp" />

    <TextView
            android:id="@+id/ddate"
            android:layout_below="@+id/dauthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="date"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
    />

    <TextView
            android:layout_toRightOf="@+id/ddate"
            android:id="@+id/dauthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            tools:text="Auteur"
            android:layout_below="@+id/ddescription"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

</RelativeLayout>
